#!/usr/bin/env ruby
require 'led_panel'
require 'bunny'

module LEDPanel
  class Client

    def initialize
      @connection = Connection.new
    end

    def run
      @connection.queue do |queue|
        puts("Client started. Listening on queue “#{queue.name}”.")
        begin
          queue.listen do |message|
            puts(message)
            end
        rescue Interrupt
          return
        end
      end
    end

  end
end

client = LEDPanel::Client.new
client.run
